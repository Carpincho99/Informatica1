#include<stdio.h>


int main(void){
  float var1;
  float var2;
  float output;
  char operacion;

  printf("~ Calculadora ~\n");
  printf("Ingrese los n√∫meros y/o operaciones saparados por enter\n");

  scanf(" %f", var1);
  scanf(" %c", operacion);
  scanf(" %f", var2);

  switch(operacion){
    case '+' :
      output = var1 + var2;
      printf("%f", output);
    break;

    case '-' :
      output = var1 - var2;
      printf("%f", output);
    break;
    break;

    case '*' :
      output = var1 * var2;
      printf("%f", output);
    break;
    break;

    case '/' :
      if(var2 != 0){
        output = var1 / var2;
        printf("%f", output);
    break;
      }
      else{
        printf("Error\n");
      }
  }

  return 0;
  }

